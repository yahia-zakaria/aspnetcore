@{
	ViewBag.title = "Create Person";
}

<a asp-action="Index" class="link-hover">Back to Persons List</a>

<div class="w-50">
	@*create form*@
	<form asp-action="Create" method="post">
		@*Person name*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="PersonName">Person Name</label>
			</div>
			<div class="w-25">
				<input type="text" id="PersonName" name="PersonName" class="form-input" />
			</div>
		</div>

		@*Email*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="Email">Email</label>
			</div>
			<div class="w-25">
				<input type="email" id="Email" name="Email" class="form-input" />
			</div>
		</div>

		@*Date of birth*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="DateOfBirth">Date of birth</label>
			</div>
			<div class="w-25">
				<input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input" />
			</div>
		</div>

		@*Gender*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="Gender">Gender</label>
			</div>
			<div class="flex-1">
				<input type="radio" id="Male" name="Gender" value="Male" />
				<label for="Male">Male</label>
				<input type="radio" id="Female" name="Gender" class="ml" value="Female" />
				<label for="Female">Female</label>
			</div>
		</div>

		@*Country*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="CountryId">Country</label>
			</div>
			<div class="w-25">
				<select class="form-input" id="CountryId" name="CountryId" asp-items="@ViewBag.countries">
					<option>Please select</option>
				</select>
			</div>
		</div>

		@*Recieve news letters*@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="w-25">
				<input type="checkbox" id="Male" name="ReceiveNewsLetters" value="true" />
				<label for="ReceiveNewsLetters">Receive News Letters</label>
			</div>
		</div>

		@*Address*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt" for="Address">Address</label>
			</div>
			<div class="w-25">
				<textarea id="Address" name="Address" class="form-input"></textarea>
			</div>
		</div>

		@*Submit*@
		<div class="form-field flex">

			<div class="w-25">
				<button class="button button-green-back">Submit</button>
			</div>
		</div>
	</form>
</div>